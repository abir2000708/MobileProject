<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".SignInActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Welcome\nPlease sign in here"
                android:textColor="@color/color_app"
                android:textSize="23sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Email"
                android:textColor="@color/color_app"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_sign_in"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="10sp"
                android:background="@color/first_app"
                android:drawableEnd="@drawable/ic_email"
                android:hint="exemple@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Password"
                android:textColor="@color/color_app"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_sign_in"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="10sp"
                android:background="@color/first_app"
                android:drawableEnd="@drawable/password"
                android:hint="********"
                android:inputType="textPassword"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="Remember me !"
                android:textColor="@color/color_app"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/go_to_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/forgot_password"
                android:textColor="@color/color_app"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:backgroundTint="@color/color_app"
                android:text="SIGN IN" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:gravity="center"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/dont_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dont_have_acc"
                    android:textColor="@color/color_app"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/go_to_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4sp"
                    android:layout_toRightOf="@+id/dont_have_account"
                    android:text="@string/registre_now"
                    android:textColor="@color/second_app"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>